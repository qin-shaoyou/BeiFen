<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:weather="http://schemas.android.com/apk/res-auto"
    android:id="@+id/miemie"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_cloudy_night"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/thisback_image"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dip"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="@dimen/topbar_icon_size"
            android:minWidth="@dimen/topbar_icon_size"
            android:padding="12dip"
            android:src="@drawable/setting_top_back" />

        <TextView
            android:id="@+id/city_title"
            style="@style/Label.Shadow"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="关于"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/brand2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout1"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <ImageView
            android:id="@+id/brand"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50.0dip"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/subVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3.0dip"
            android:includeFontPadding="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40.0dip"
            android:autoLink="email"
            android:gravity="bottom|center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="Copyright © 2012-2015 shaoyou. All Rights Reserved."
            android:textColor="@color/white"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/daokedao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/subVersion"
            android:layout_toLeftOf="@+id/brand"
            android:text="道\n可\n道\n ,\n非\n常\n道\n"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/daokedao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/copyright"
            android:layout_toRightOf="@+id/brand"
            android:text="名\n可\n名\n ,\n非\n常\n名\n"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/upgradeLayout"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text="作者:"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text="shaoyou"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dao5"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignLeft="@+id/upgradeLayout"
            android:layout_below="@+id/upgradeLayout"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView333"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:duplicateParentState="true"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text="邮箱:"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/youxiang"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:singleLine="true"
                android:text="qin_shaoyou@163.com"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/app_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subVersion"
            android:layout_centerHorizontal="true"
            android:duplicateParentState="true"
            android:gravity="center"
            android:linksClickable="true"
            android:paddingBottom="5dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:singleLine="false"
            android:text="感谢您使用我的App"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/dao6"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dao5"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.61"
                android:ems="10"
                android:hint="输入口令："
                android:inputType="numberPassword"
                android:visibility="invisible" >
            </EditText>

            <Button
                android:id="@+id/OK"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.61"
                android:text="好"
                android:textSize="10sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/OK2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.61"
                android:text="取消"
                android:textSize="10sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>