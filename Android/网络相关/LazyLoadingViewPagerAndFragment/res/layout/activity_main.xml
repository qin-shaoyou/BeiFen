<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/main_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:clickable="true"
             android:onClick="onClick"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:text="聊天"/>
        </LinearLayout>
        <View android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:background="#AEC7E1"/>
        
        <LinearLayout
            android:id="@+id/main_conn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
             android:clickable="true"
              android:onClick="onClick"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_conn_tv"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:text="联系人"/>
        </LinearLayout>
        
        <View android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:background="#AEC7E1"/>
        <LinearLayout
            android:id="@+id/main_community_layout"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
             android:clickable="true"
             android:onClick="onClick"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_community_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:gravity="center_horizontal"
                android:text="社区"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/id_tab_line"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:background="@drawable/vpi__tab_selected_pressed_holo"
        />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>